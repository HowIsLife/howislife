<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:drawable="@color/button_zalando"/>
    <item>
        <ripple android:color="@color/button_zalando_pressed">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/button_zalando" />
                    <corners android:radius="3dp"/>
                    <padding
                            android:bottom="10dp"
                            android:left="15dp"
                            android:right="15dp"
                            android:top="10dp" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>
